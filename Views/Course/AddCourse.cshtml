@{
    Layout = "~/Views/Shared/Layout/_AdminLayout.cshtml";

}
@using MJRPAdmin.DTO.DtoOutPut;
@model MJRPAdmin.DTO.DtoOutPut.FacultyOutPut;

@{
    var faculty = ViewData["facultyData"] as List<FacultyOutPut>;
}

<section class="content container-fluid">

    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Add Course</h3>
        </div>

        <form class="form-horizontal" method="post">
            <div class="box-body">

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">CourseName</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="courseName" name="CourseName" placeholder="CourseName">
                    </div>
                </div>

            </div>

            <div class="box-body">
                <div class="form-group div1">
                    <label for="inputEmail3" class="col-sm-2 control-label">Faculty</label>
                    <div class="col-sm-10">
                        <select id="role" name="FacultyId" style="width:100%">
                            <option value="">Select Faculty</option>
                            @foreach (var roleList in faculty)
                            {
                                <option value="@roleList.Id">@roleList.Tittle</option>
                            }
                        </select>

                    </div>
                </div>
            </div>


            <div class="box-footer">

                <button type="submit" class="btn btn-info pull-right">Save</button>
            </div>

        </form>
    </div>

</section>


