@{
    Layout = "~/Views/Shared/Layout/_AdminLayout.cshtml";

}



@using MJRPAdmin.DTO.DtoOutPut;
@model MJRPAdmin.DTO.DtoOutPut.FacultyOutPut;



<style>
    .search {
        margin-left: 92px;
        margin-top: -27px;
    }
</style>

<section class="content">
    <div>
        <a class="btn btn-primary" href="../Faculty/addFaculty">Add Faculty</a>

    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">FacultyList</h3>
                </div>

                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Tittle</th>
                                <th>Active</th>
                               
                                <th>CreatedAt</th>
                                <th>UpdatedAt</th>
                                <th>Edit</th>
                                <th>Delete</th>
                             
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var i = 0;
                            }
                            @foreach (var faculty in ViewData["facultydata"] as List<FacultyOutPut>)
                            {
                                <tr>
                                    @*  <td>@Facilities.Id</td>*@
                                    <td>@(++i)</td>
                                    <td>@faculty.Tittle</td>

                                    <td>@faculty.IsActive</td>
                                    <td>@faculty.CreatedAt</td>
                                    <td>@faculty.UpdatedAt</td>
                                    <td>
                                        <a class="btn btn-primary" href="../Faculty/FacultyEditByID/@faculty.Id"><i class="fa fa-edit"></i></a>
                                    </td>
                                    <td>

                                        <a class="btn btn-danger" href="../Faculty/FacultyDeleteByID/@faculty.Id"> <i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            }

                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


@if (TempData["success"] != null)
{
    <script>
        var message = '@TempData["success"]';
        toastr.success(message);
    </script>
}

