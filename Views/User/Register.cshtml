@{
    Layout = "~/Views/Shared/Layout/_AuthLayout.cshtml";
}



<style>
    .button {
        width: 70%;
        border-radius: 70px;
    }
</style>

<div class="limiter">
    <div class="container-login100" style="background-image: url('../images/img-01.jpg');">
        <div class="wrap-login100 p-t-50 p-b-0">


            <form class="login100-form validate-form" method="post" action="/User/addUpdateUser" onsubmit="return addUpdateUsers()">


                <div class="login100-form-avatar">
                    <img src="~/assets/images/user1.jpg" alt="AVATAR">
                </div>

                <span class="login100-form-title p-t-20 p-b-45">
                    Register Now
                </span>
              
                <div class="wrap-input100 validate-input m-b-10" data-validate="Name is required">
                    <input class="input100" type="text" name="Name" id="name" placeholder=" Name">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-user"></i>
                    </span>

                </div>

               

                <div class="wrap-input100 validate-input m-b-10" data-validate="Email is required">
                    <input class="input100" type="text" name="Email" id="email" placeholder=" Email">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope"></i>
                    </span>
                </div>

                <div class="wrap-input100 validate-input m-b-10" data-validate="Mobile is required">
                    <input class="input100" type="text" name="Mobile" id="mobile" placeholder=" Mobile">
                    <span asp-validate-for="Mobile" class="text-danger"></span>
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-mobile"></i>
                    </span>
                </div>



                <div class="wrap-input100 validate-input m-b-10" data-validate="Password is required">
                    <input class="input100" type="password" name="Password" id="password" placeholder=" Password">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock"></i>
                    </span>
                </div>
               

                <div class="container-login100-form-btn p-t-10">
                   
                    <button type="submit" class="btn btn-info pull-right button">Submit</button>
                </div>

                @* <div class="text-center w-full p-t-25 p-b-80">
                <a href="../Auth/Login" class="txt1">

                Login
                </a>
                </div>*@

            </form>
        </div>
    </div>
</div>

@if (TempData["error"] != null)
{
    <script>
        var message = '@TempData["error"]';
        toastr.error(message);
    </script>
}