@{
    Layout = "~/Views/Shared/Layout/_AdminLayout.cshtml";

}


@using MJRPAdmin.DTO.DtoOutPut;
@model MJRPAdmin.DTO.DtoOutPut.UserOutPut;


@{
    var userId = ViewData["userData"] as UserOutPut;
}


<style>
    .lable1 {
        margin-left: -103px;
    }

    .lable2 {
        margin-left: 41%;
        margin-top: -50px;
    }

    .textbox1 {
        width: 40%;
    }

    .textbox2 {
        margin-left: 57%;
        width: 40%;
        margin-top: -50px;
    }
</style>

<section class="content-header">
    <h1>
        User
    </h1>
</section>

<section class="content container-fluid">

    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">User Update</h3>
        </div>

        <form class="form-horizontal" method="post" action="/User/userUpdate" onsubmit="return addUpdateUsers()">
            <input type="hidden" asp-for="Id" value="@userId.Id" />
            <div class="box-body">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label lable1">Name</label>
                    <div class="col-sm-10 textbox1">
                        <input type="text"  class="form-control" id="name" name="Name" placeholder="Name" value="@userId.Name">
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label lable2">Email</label>
                    <div class="col-sm-10 textbox2">
                        <input type="email" class="form-control" id="email" value="@userId.Email" name="Email" placeholder="Email">
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label  lable1 ">Mobile</label>
                    <div class="col-sm-10  textbox1 ">
                        <input type="text"   class="form-control" id="mobile" value="@userId.Mobile" name="Mobile" placeholder="Mobile">
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label lable2">Password</label>
                    <div class="col-sm-10 textbox2">
                        <input type="text" class="form-control" id="password" value="@userId.Password" name="Password" placeholder="Password">
                    </div>
                </div>



                 <div class="box-footer">

                <button type="submit" class="btn btn-info pull-right">Update</button>
                </div>

        </form>

    </div>

</section>

@if (TempData["error"] != null)
{
    <script>
        var message = '@TempData["error"]';
        toastr.error(message);
    </script>
}