@if (TempData["Success"] != null)
{
    <script>
        var message = '@TempData["Success"]';
        toastr.success(message);
    </script>
}
@if (TempData["error"] != null)
{
    <script>
        var message = '@TempData["error"]';
        toastr.error(message);
    </script>
}